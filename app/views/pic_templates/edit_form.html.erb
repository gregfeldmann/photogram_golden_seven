<h1>Edit Photo <%=@the_id_number %></h1>

<form action="/update_photo/<%=@the_id_number%>">
  <div>
    <label for="source_input">
      Image URL
    </label>

    <input id="source_input" type="text" value="<%=@the_source%>">
  </div>

  <div>
    <label for="caption_input">
      Caption
    </label>

    <input id="caption_input" type="text" value="<%=@the_caption%>">
  </div>

  <button>
    Update Photo
  </button>
</form>


